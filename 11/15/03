//作用域和生命周期
//局部变量作用域：就是变量所在的局部范围
//全局变量作用域：整个工程
//局部变量的生命周期是：进入作用域生命周期开始，出作用域生命周期结束
//全局变量的生命周期是：整个程序的生命周期

int g_val = 2022;//全局变量

//int main()
//{
//	printf("1:%d\n", g_val);
//	{
//		printf("2:%d\n", g_val);
//
//		int a = 10;
//		printf("a = %d\n", a);
//
//	}
//	printf("3:%d\n", g_val);
//	return 0;
//}
//如果想使用同一工程下的变量，需要声明
extern int g_val;
int main()
{
	printf("%d\n", g_val);
	return 0;

}
